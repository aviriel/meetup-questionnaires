<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <PreferenceCategory android:title="Transfer configuration" >
        <EditTextPreference
             android:title="Username"
             android:key="pref_username"
             android:defaultValue=""/>
        <EditTextPreference
             android:title="Password"
             android:key="pref_password"
             android:inputType="textPassword"
             android:defaultValue=""/>
        <EditTextPreference
             android:title="Alfresco address"
             android:key="pref_url"
             android:defaultValue="http://server:port/alfresco/service/meetup/upload"/>
        <EditTextPreference
             android:title="Site name"
             android:key="pref_sitename"
             android:defaultValue="meetup"/>
    </PreferenceCategory>

</PreferenceScreen>
